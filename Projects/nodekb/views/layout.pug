doctype html
html
  head
    title MTX Books
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    div.content
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/') MTX Books
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item
              a.nav-link(href='/')
                | Home 
                span.sr-only (current)
            if user
              li.nav-item
                a.nav-link(href='/articles/add') Add books
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a.nav-link(href='/users/logout') Logout
            else
              li
                a.nav-link(href='/users/register') Register
              li
                a.nav-link(href='/users/login') Login
      .container
        != messages('message', locals)
        br
        block content
        br
    footer.footer
        hr
        center.mb-2 copyright &copy; 2020  
        
