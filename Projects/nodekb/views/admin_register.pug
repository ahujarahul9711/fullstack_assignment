extends layout

block content
  h1 Admin Register
  form(method='POST', action='/admins/admin_register')
      #from-group
        label Name:
        input.form-control(name='name', type='text' required)
      #from-group
        label Email:
        input.form-control(name='email', type='text' required)
      #from-group
        label Username:
        input.form-control(name='username', type='text' required)
      #from-group
        label Password:
        input.form-control(name='password', type='password' required)
      #from-group
        label Confirm password:
        input.form-control(name='password2', type='password' required)
          
      br
      input.btn.btn-primary(type='submit', value='Submit' required)
